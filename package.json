    "description": "InertiaPixel: Authentication library for React and Next.js projects, supporting credential, social login, JWT handling, and context-based state.",
    "author": "Md Asif <mdasiff007@gmail.com>",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "scripts": {
        "build": "tsc",
        "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
        "check": "npm run lint && npm run build"
    },
    "peerDependencies": {
        "next": ">=12.0.0",
        "react": "^19.1.0"
    },
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/inertiapixel/react-auth"
    },
    "bugs": {
        "url": "https://github.com/inertiapixel/react-auth/issues"
    },
    "homepage": "https://www.inertiapixel.com/react-auth",
    "keywords": [
        "react",
        "nextjs",
        "auth",
        "authentication",
        "jwt",
        "react-auth",
        "social-login",
        "2fa",
        "otp-login",
        "context-api",
        "frontend",
        "web-development"
    ],
    "contributors": [
        "Md Asif <mdasiff007@gmail.com>"
    ],
    "dependencies": {
        "jwt-decode": "^4.0.0",
        "react-dom": "^19.1.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.26.0",
        "@types/node": "^22.15.3",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.3",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "eslint": "^9.26.0",
        "eslint-config-next": "^15.3.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.31.1"
    }
